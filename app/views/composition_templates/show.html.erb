<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Composition #<%= @composition.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/compositions" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @composition.user %>
          <a href="/compositions/<%= @composition.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit composition
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @composition.user %>
          <a href="/delete_composition/<%= @composition.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete composition
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Quantity
      </dt>
      <dd>
        <%= @composition.quantity %>
      </dd>

      <dt>
        Recipe
      </dt>
      <dd>
        <% if @composition.recipe.present? %>
          <a href="/recipes/<%= @composition.recipe_id %>">
            <%= @composition.recipe.title %>
          </a>
        <% end %>
      </dd>

      <dt>
        Ingredient
      </dt>
      <dd>
        <% if @composition.ingredient.present? %>
          <a href="/ingredients/<%= @composition.ingredient_id %>">
            <%= @composition.ingredient.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @composition.user.present? %>
          <a href="/users/<%= @composition.user_id %>">
            <%= @composition.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@composition.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@composition.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

