<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Compositions

    <a data-toggle="collapse" href="#user_compositions_new_form">
      Add composition
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.compositions.each do |composition| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/compositions/<%= composition.id %>">
          <%= composition.quantity %>
        </a>
        <!-- Show link end -->

      </li>
    <% end %>

  </ul>
</div>
