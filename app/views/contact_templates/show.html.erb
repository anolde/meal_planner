<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Contact #<%= @contact.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/contacts" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link contact start -->
      <div class="col">
        <% if current_user == @contact.user %>
          <a href="/contacts/<%= @contact.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit contact
          </a>
        <% end %>
      </div>
      <!-- Edit link contact end -->

      <!-- Delete link contact start -->
      <div class="col">
        <% if current_user == @contact.user %>
          <a href="/delete_contact/<%= @contact.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete contact
          </a>
        <% end %>
      </div>
      <!-- Delete link contact end -->
    </div>

    <dl>
      <dt>
        First name
      </dt>
      <!-- Display first_name start -->
      <dd>
        <%= @contact.first_name %>
      </dd>
      <!-- Display first_name end -->

      <dt>
        Last name
      </dt>
      <!-- Display last_name start -->
      <dd>
        <%= @contact.last_name %>
      </dd>
      <!-- Display last_name end -->

      <dt>
        Email
      </dt>
      <!-- Display email start -->
      <dd>
        <%= @contact.email %>
      </dd>
      <!-- Display email end -->

      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <%= @contact.user_id %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@contact.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@contact.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

