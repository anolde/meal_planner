<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Contact #<%= @contact.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/contacts" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @contact.user %>
          <a href="/contacts/<%= @contact.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit contact
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @contact.user %>
          <a href="/delete_contact/<%= @contact.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete contact
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        First name
      </dt>
      <dd>
        <%= @contact.first_name %>
      </dd>

      <dt>
        Last name
      </dt>
      <dd>
        <%= @contact.last_name %>
      </dd>

      <dt>
        Email
      </dt>
      <dd>
        <%= @contact.email %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @contact.user.present? %>
          <a href="/users/<%= @contact.user_id %>">
            <%= @contact.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@contact.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@contact.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

