<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Compositions

    <a data-toggle="collapse" href="#recipe_compositions_new_form">
      Add composition
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @recipe.compositions.each do |composition| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/compositions/<%= composition.id %>">
          <%= composition.quantity %>
        </a>

        <%if current_user == composition.user %>
          <a href="/delete_composition_from_recipe/<%= composition.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="recipe_compositions_new_form">
        <%= render partial: "recipe_templates/recipe_compositions_new_form" %>
      </div>
    </div>

  </ul>
</div>
