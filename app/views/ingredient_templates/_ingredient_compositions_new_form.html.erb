<form action="/create_composition_from_ingredient" method="post">

  <div class="form-group">
    <label for="quantity">
      Quantity
    </label>

    <input type="text" id="quantity" name="quantity" class="form-control" value="<%= @composition.quantity %>">
  </div>

  <div class="form-group">
    <label for="recipe_id">
      Recipe
    </label>

    <%= select_tag(:recipe_id, options_from_collection_for_select(Recipe.all, :id, :title, @composition.recipe_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="ingredient_id" value="<%= @ingredient.id %>">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create composition
  </button>
</form>
