<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Ingredient #<%= @ingredient.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/ingredients" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link ingredient start -->
      <div class="col">
        <% if current_user == @ingredient.user %>
          <a href="/ingredients/<%= @ingredient.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit ingredient
          </a>
        <% end %>
      </div>
      <!-- Edit link ingredient end -->

      <!-- Delete link ingredient start -->
      <div class="col">
        <% if current_user == @ingredient.user %>
          <a href="/delete_ingredient/<%= @ingredient.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete ingredient
          </a>
        <% end %>
      </div>
      <!-- Delete link ingredient end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @ingredient.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <%= @ingredient.user_id %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@ingredient.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@ingredient.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "ingredient_templates/ingredient_compositions" %>
  </div>
</div>
<!-- Show Page Customization end -->
