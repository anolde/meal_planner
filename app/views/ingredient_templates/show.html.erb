<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Ingredient #<%= @ingredient.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/ingredients" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @ingredient.user %>
          <a href="/ingredients/<%= @ingredient.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit ingredient
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @ingredient.user %>
          <a href="/delete_ingredient/<%= @ingredient.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete ingredient
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @ingredient.name %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @ingredient.user.present? %>
          <a href="/users/<%= @ingredient.user_id %>">
            <%= @ingredient.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@ingredient.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@ingredient.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "ingredient_templates/ingredient_compositions" %>
  </div>
</div>
