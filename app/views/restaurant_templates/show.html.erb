<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Restaurant #<%= @restaurant.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/restaurants" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link restaurant start -->
      <div class="col">
        <a href="/restaurants/<%= @restaurant.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit restaurant
        </a>
      </div>
      <!-- Edit link restaurant end -->

      <!-- Delete link restaurant start -->
      <div class="col">
        <a href="/delete_restaurant/<%= @restaurant.id %>" class="btn btn-block btn-outline-secondary">
          Delete restaurant
        </a>
      </div>
      <!-- Delete link restaurant end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @restaurant.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Location
      </dt>
      <!-- Display location start -->
      <dd>
        <%= @restaurant.location %>
      </dd>
      <!-- Display location end -->

      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <%= @restaurant.user_id %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Menu link
      </dt>
      <!-- Display menu_link start -->
      <dd>
        <%= @restaurant.menu_link %>
      </dd>
      <!-- Display menu_link end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@restaurant.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@restaurant.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

