<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All restaurants
    </h1>

    <a href="/restaurants/new" class="btn btn-block btn-outline-secondary">
      Add a new restaurant
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->
<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "restaurant_templates/all_photos_map" %>
  </div>
</div>
<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Location
        </th>

        <th>
          User
        </th>

        <th>
          Menu link
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @restaurants.each do |restaurant| %>
      <tr>
        <!-- Display restaurant.id start -->
        <td>
          <%= restaurant.id %>
        </td>
        <!-- Display restaurant.id end -->

        <!-- Display restaurant.name start -->
        <td>
          <%= restaurant.name %>
        </td>
        <!-- Display restaurant.name end -->

        <!-- Display restaurant.location start -->
        <td>
          <%= restaurant.location %>
        </td>
        <!-- Display restaurant.location end -->

        <!-- Display restaurant.user_id start -->
        <td>
          <%= restaurant.user.email %>
        </td>
        <!-- Display restaurant.user_id end -->

        <!-- Display restaurant.menu_link start -->
        <td>
          <%= restaurant.menu_link %>
        </td>
        <!-- Display restaurant.menu_link end -->

        <!-- Display restaurant.created_at start -->
        <td>
          <%= time_ago_in_words(restaurant.created_at) %> ago
        </td>
        <!-- Display restaurant.created_at end -->

        <!-- Display restaurant.updated_at start -->
        <td>
          <%= time_ago_in_words(restaurant.updated_at) %> ago
        </td>
        <!-- Display restaurant.updated_at end -->

        <td>
          <a href="/restaurants/<%= restaurant.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @restaurants, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
